<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.sidiff.repair.history.editrules.generator"
            name="History To Edit-Rules">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.repair.history.editrules.generator.EditRuleGeneratorHandler"
            commandId="org.sidiff.repair.history.editrules.generator">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <adapt
                              type="org.eclipse.core.resources.IResource">
                        </adapt>
                     </iterate>
                  </with>
               </or>
            </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.sidiff.repair.history.menu?after=org.sidiff.repair.history.generator.separator.tools">
         <command
               commandId="org.sidiff.repair.history.editrules.generator"
               style="push">
            <visibleWhen
                  checkEnabled="true">
                           <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </iterate>
         </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
