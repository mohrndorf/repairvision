<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Makes all preserve and delete nodes as abstract as possible."
            id="org.sidiff.editrule.tools.command.makeabstract"
            name="Make Edit-Rule Abstract">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Cleans up the henshin rule meta-model imports."
            id="org.sidiff.editrule.tools.command.cleanupimports"
            name="Clean Up Meta-Model Imports">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Cleans up unused Henshin rule parameters."
            id="org.sidiff.editrule.tools.command.cleanupparameters"
            name="Clean Up Edit-Rule Parameters">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Creates input-parameters for a henshin rule."
            id="org.sidiff.editrule.tools.command.createinputparameters"
            name="Create Edit-Rule Input-Parameters">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Creates a parameter for each attribute variable."
            id="org.sidiff.editrule.tools.command.createattributeparameters"
            name="Attribute Variables/Values To Parameters">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Renames node names and attribute variables."
            id="org.sidiff.editrule.tools.command.renameidentifier"
            name="Rename Edit-Rule Identifiers">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description=" Renames an edit-rule: file, module, rule, diagram"
            id="org.sidiff.editrule.tools.command.renamerule"
            name="Rename Edit-Rule">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Removes all non context (preserve) nodes from an edit rule."
            id="org.sidiff.editrule.tools.command.reducetocontext"
            name="Reduce To Context">
      </command>
      <command
            categoryId="org.sidiff.difference.ui.category.silift"
            description="Invert all edit rule actions (delete - create)."
            id="org.sidiff.editrule.tools.command.invertrules"
            name="Invert Edit-Rule Actions">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
         <handler
               class="org.sidiff.editrule.tools.handlers.ReduceToContext"
               commandId="org.sidiff.editrule.tools.command.reducetocontext">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.MakeRuleAbstractHandler"
               commandId="org.sidiff.editrule.tools.command.makeabstract">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.CleanUpImportsHandler"
               commandId="org.sidiff.editrule.tools.command.cleanupimports">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.CleanUpParametersHandler"
               commandId="org.sidiff.editrule.tools.command.cleanupparameters">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.CreateInputParametersHandler"
               commandId="org.sidiff.editrule.tools.command.createinputparameters">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.CreateAttributeParametersHandler"
               commandId="org.sidiff.editrule.tools.command.createattributeparameters">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.RenameEditRuleIdentifiersHandler"
               commandId="org.sidiff.editrule.tools.command.renameidentifier">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.RenameEditRuleHandler"
               commandId="org.sidiff.editrule.tools.command.renamerule">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>
         <handler
               class="org.sidiff.editrule.tools.handlers.InvertEditRuleActionsHandler"
               commandId="org.sidiff.editrule.tools.command.invertrules">
            <activeWhen>
               <or>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.emf.henshin.fileextension">
                        </reference>
                     </iterate>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <reference
                           definitionId="org.eclipse.emf.henshin.fileextension">
                     </reference>
                  </with>
               </or>
            </activeWhen>
         </handler>         
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.silift.menu?after=header">
         <separator
               name="org.sidiff.editrule.tools.separatorTop"
               visible="true">
         </separator>
         <menu
               label="Edit-Rule Tools">
            <command
                  commandId="org.sidiff.editrule.tools.command.reducetocontext"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.makeabstract"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.cleanupimports"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.cleanupparameters"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.createinputparameters"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.createattributeparameters"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.renameidentifier"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.renamerule"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.editrule.tools.command.invertrules"
                  style="push">
            </command>
         </menu>
         <separator
               name="org.sidiff.editrule.tools.separatorBottom"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.core.expressions.definitions">
      <definition id="org.eclipse.emf.henshin.fileextension">
         <adapt type="org.eclipse.core.resources.IResource">
            <or>
                <test property="org.eclipse.core.resources.extension"
                      value="henshin">
                </test>
            </or>
         </adapt>
      </definition>
   </extension>
</plugin>
