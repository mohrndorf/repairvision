<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Model Repair"
            id="org.sidiff.consistency.repair.lifting.ui">
      </category>
      <view
            name="Model Repair"
            icon="icons/repair.png"
            category="org.sidiff.consistency.repair.lifting.ui"
            class="org.sidiff.consistency.repair.lifting.ui.views.RepairView"
            id="org.sidiff.consistency.repair.lifting.ui.views.RepairView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.sidiff.consistency.repair.lifting.ui.views.RepairPreferencePage"
            id="org.sidiff.consistency.repair.lifting.ui.mainpage"
            name="Model Repairing">
      </page>
   </extension>
   <extension
         id="org.sidiff.consistency.repair.lifting.ui.decoration.RepairDecoratorProvider"
         name="Repair Selection Decorator"
         point="org.eclipse.gmf.runtime.diagram.ui.decoratorProviders">
      <decoratorProvider
            class="org.sidiff.consistency.repair.lifting.ui.decoration.RepairDecoratorProvider">
         <Priority
               name="Lowest">
         </Priority>
         <object
               class="org.eclipse.gmf.runtime.notation.View(org.eclipse.gmf.runtime.notation)"
               id="NODE">
         </object>
         <context
               decoratorTargets="NODE">
         </context>
      </decoratorProvider>
   </extension>

</plugin>
