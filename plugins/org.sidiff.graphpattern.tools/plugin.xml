<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.sidiff.graphpattern.tools.menu"
               label="Graph Pattern">
            <command
                  commandId="org.sidiff.graphpattern.tools.command.slicegraphpattern"
                  icon="icons/slice.gif"
                  style="push">
            </command>
            <command
                  commandId="org.sidiff.graphpattern.tools.command.splitbundle"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.sidiff.graphpattern.presentation.GraphpatternEditorID">
         <separator
               name="org.sidiff.graphpattern.tools.separator.start"
               visible="true">
         </separator>
         <command
               commandId="org.sidiff.graphpattern.tools.command.slicegraphpattern"
               icon="icons/slice.gif"
               style="push">
         </command>
         <separator
               name="org.sidiff.graphpattern.tools.separator.end"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.graphpattern.tools.SliceGraphPattern"
            commandId="org.sidiff.graphpattern.tools.command.slicegraphpattern">
      </handler>
      <handler
            class="org.sidiff.graphpattern.tools.SplitBundle"
            commandId="org.sidiff.graphpattern.tools.command.splitbundle">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.sidiff.graphpattern.category"
            id="org.sidiff.graphpattern.tools.command.slicegraphpattern"
            name="Slice Graph Pattern">
      </command>
      <command
            categoryId="org.sidiff.graphpattern.category"
            id="org.sidiff.graphpattern.tools.command.splitbundle"
            name="Split Bundle">
      </command>
   </extension>
</plugin>
