graph G {
	
	compound=true;
	
	subgraph cluster0 {
		node [style=filled, shape=circle, color=white, height=0.02, width=0.01, margin=0.0];

		style=filled;
		color=lightgrey;
		fontcolor=white;
		fontname=bold;
		fontsize=10;

		label="C1 : Class";

		a;
	}
	
	subgraph cluster1 {
		node [style=filled, shape=circle, color=white, height=0.02, width=0.01, margin=0.0];

		style=filled;
		color=lightgrey;
		fontcolor=white;
		fontname=bold;
		fontsize=10;

		label="A : Attribute";

		b [color=royalblue];
		c;
	}
	
	subgraph cluster2 {
		node [style=filled, shape=circle, color=white, height=0.02, width=0.01, margin=0.0];

		style=filled;
		color=lightgrey;
		fontcolor=white;
		fontname=bold;
		fontsize=10;

		label="C2 : Class";

		cluster0 [style=invis, label="", height=0.02, width=0.01];
	}
	
	c -- cluster0 [ltail=cluster1, lhead=cluster2, penwidth=2, color=lightgrey];
	a -- b [ltail=cluster0, lhead=cluster1, penwidth=2, color=lightgrey];
	a -- b;
	a -- c;
}