<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="presentation" name="Repair Engine Presentation" schema="schema/presentation.exsd"/>

  <extension
         point="org.eclipse.ui.views">
      <category
            name="Model Repair"
            id="org.sidiff.repair.ui">
      </category>
      <view
            name="Model Repair"
            icon="icons/repair.png"
            category="org.sidiff.repair.ui"
            class="org.sidiff.repair.ui.views.RepairView"
            id="org.sidiff.repair.ui.views.RepairView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.sidiff.repair.ui.config.RepairPreferencePage"
            id="org.sidiff.repair.ui.config.mainpage"
            name="Model Repairing">
      </page>
   </extension>
   
   <extension
         id="org.sidiff.repair.ui.decoration.RepairDecoratorProvider"
         name="Repair Selection Decorator"
         point="org.eclipse.gmf.runtime.diagram.ui.decoratorProviders">
      <decoratorProvider
            class="org.sidiff.repair.ui.decoration.RepairDecoratorProvider">
         <Priority
               name="Lowest">
         </Priority>
         <object
               class="org.eclipse.gmf.runtime.notation.View(org.eclipse.gmf.runtime.notation)"
               id="NODE">
         </object>
         <context
               decoratorTargets="NODE">
         </context>
      </decoratorProvider>
   </extension>
   
</plugin>
